QScrollBar::up-arrow:vertical
{
    image: url(:/controls/up-arrow);
    width: 7px;
}

QScrollBar::down-arrow:vertical
{
    image: url(:/controls/down-arrow);
    width: 7px;
}

QDockWidget:title
{
    text-align: center;
}

QDockWidget::close-button,
QDockWidget::float-button
{
    border: none;
    icon-size: 8px;
}

QDockWidget
{
    border: 1px solid #666666;
    titlebar-close-icon: url(:/controls/close);
}

QMenuBar
{
	background: #ffffff;
}

QMenuBar::item
{
	background: #ffffff;
	color: #222222;
}

QMenuBar::item:selected,
QMenuBar::item:pressed
{
	background: #00bbff;
	color: #ffffff;
}

QMenu
{
	background: #222222;
	margin: 0px;
}

QMenu::separator
{
	background: #666666;
	height: 1px;
	margin-left: 5px;
	margin-right: 5px;
}

QMenu::item
{
	background: #222222;
	color: #ffffff;
}

QMenu::item:selected,
QMenu::item:pressed
{
	background: #00bbff;
	color: #222222;
}

QMainWindow::separator
{
	background: #444444;
}

QMainWindow::separator:vertical
{
	width: 2px;
}

QMainWindow::separator:horizontal
{
	height: 2px;
}

QMainWindow::separator:hover
{
	background: #00bbff;
}